[user]
    name = Kumar McMillan
    email = kumar.mcmillan@gmail.com
[color]
    diff = auto
    status  = auto
    branch = auto
[alias]
    ci = commit
    co = checkout
    st = status
    sync = "!f() { echo Syncing $1 with master && git checkout master && git pull && git checkout $1 && git rebase master; }; f"
    check = "!f() { git whatchanged $1 -1 | awk '/^:/ {print $NF}' | xargs check.py; }; f"
    fix = "!f() { git commit -a -m \"fixup! $(git log -1 --pretty=format:%s)\" && git rebase -i --autosquash HEAD~4; }; f"
    ri = rebase --interactive --autosquash HEAD~20
    # This is specific to Zamboni. https://github.com/jbalogh/zamboni/
    bigup = "!f() { git submodule sync -q && git submodule update --init --recursive && pushd locale && svn up && popd && find . -name '*.pyc' -exec rm {} \\;; }; f"

[core]
    excludesfile = /Users/kumar/.gitignore
